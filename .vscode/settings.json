{
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": true,
    "files.exclude": {
        ".git": true
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "colorize.languages": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "colorize.enable_search_variables": true,
}