{
  "compilerOptions": {
    // "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "~graphql/*": ["src/graphql/*"],
      "~models": ["src/models"],
      "~theme": ["src/theme"]
    }
  }
}
